{% extends 'base.html.twig' %}

{% block page_title %}
    {% if app_name is defined %}
        {{ app_name }}
    {% else %}
        CRUD-IT
    {% endif %}
    {% if views|length %}
        {% set mainView = views|first %}
        {% if
            mainView.config.title is defined
            and mainView.config.title
            and mainView.config.translation_domain is defined
            and mainView.config.translation_domain
        %}
            - {{ mainView.config.title|trans({'%entity%': mainView.data.entity|default('')}, mainView.config.translation_domain) }}
        {% endif %}
    {% endif %}
{% endblock %}

{% block content %}
    {% include '@LleCrudit/layout/sb_admin/bricks/_bricks.html.twig' with {'views': views } %}
{% endblock %}
