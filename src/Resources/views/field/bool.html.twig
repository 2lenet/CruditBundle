<div class="form-check form-switch">
  <input class="form-check-input" type="checkbox" id="{{ view.field.id }}" {% if value == true %}checked{%  endif %}>
  <label class="form-check-label" for="{{ view.field.id }}">
      {%  if value == true %}
          {{ 'crudit.yes'|trans }}
      {%  elseif value is same as(false) or (not value and options.nullToFalse == true) %}
          {{ 'crudit.no'|trans }}
      {%  endif %}
  </label>
</div>
