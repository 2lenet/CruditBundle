{%  if view.field.editInPlace %}
    {% set edit_url = path(view.field.options['edit_route'], {"id": resource.id}) %}

    <div class="crudit-eip" data-field="{{ view.field.id }}" data-edit_url="{{ edit_url }}">
        <form class="form-inline d-none">
            <div class="control-group form-group d-flex">
                <div>
                    <input type="text" class="form-control form-control-sm" value="{{ value }}">
                </div>
                <button type="button" class="btn btn-primary btn-sm crudit-eip-submit">
                    <i class="fa fa-check"></i>
                </button>
                <button type="button" class="btn btn-default btn-sm crudit-eip-cancel">
                    <i class="fa fa-close"></i>
                </button>
            </div>
            <div class="editable-error-block help-block" style="display: none;">
            </div>
        </form>
        <div class="crudit-eip-value">{{ value }}</div>
    </div>
{% else %}
    {{ value }}
{% endif %}
