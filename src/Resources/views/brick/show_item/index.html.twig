<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">{# {{ view.config.title }} #}</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="{{ view.data.item.id }}" width="100%" cellspacing="0">
                <tbody>
                    {% for field in view.data.item.fields %}
                        <tr>
                            <th>{{ field.field.header |trans }}</th>
                            <td> {{ field.value }}</td>
                        <tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
