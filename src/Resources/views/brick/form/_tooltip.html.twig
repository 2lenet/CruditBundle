{% if field.vars.tooltip is defined and field.vars.tooltip %}
    <i
        class="fas fa-info-circle"
        style="position: absolute; top: 50%; right: 10px; transform: translate(0, -50%)"
        data-bs-toggle="tooltip"
        data-bs-placement="{% if field.vars.tooltip_position is defined and field.vars.tooltip_position %}{{ field.vars.tooltip_position }}{% else %}bottom{% endif %}"
        data-bs-custom-class="custom-tooltip"
        data-bs-title="{{ field.vars.tooltip|trans }}"
    >
    </i>
{% elseif field.vars.tooltip_html is defined and field.vars.tooltip_html %}
    <i
        class="fas fa-info-circle"
        style="position: absolute; top: 50%; right: 10px; transform: translate(0, -50%)"
        data-bs-toggle="tooltip"
        data-bs-placement="{% if field.vars.tooltip_position is defined and field.vars.tooltip_position %}{{ field.vars.tooltip_position }}{% else %}bottom{% endif %}"
        data-bs-custom-class="custom-tooltip"
        data-bs-html="true"
        data-bs-title="{{ field.vars.tooltip_html }}"
    >
    </i>
{% elseif field.vars.tooltip_template is defined and field.vars.tooltip_template %}
    <i
        class="fas fa-info-circle"
        style="position: absolute; top: 50%; right: 10px; transform: translate(0, -50%)"
        data-bs-toggle="tooltip"
        data-bs-placement="{% if field.vars.tooltip_position is defined and field.vars.tooltip_position %}{{ field.vars.tooltip_position }}{% else %}bottom{% endif %}"
        data-bs-custom-class="custom-tooltip"
        data-bs-html="true"
        data-bs-title="{% include field.vars.tooltip_template %}"
    >
    </i>
{% endif %}