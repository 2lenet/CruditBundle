<input
    type="hidden"
    id="{{ id }}_items"
    name="{{ id }}_items"
    value="{{ value|default('') }}"
>
<input class="form-control entity-select"
       data-url="{{ url }}"
       data-options="{{ items|default('[]')|escape('html_attr') }}"
       data-maxitems="{{ multiple ? 'null' : '1' }}"
       id="{{ id }}"
       name="{{ full_name }}"
       value="{{ value|default('') }}"
    {{ required ? 'required' }}
/>
